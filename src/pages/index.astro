---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title="SOC 2 Compliance Solutions Directory" description="A comprehensive directory of companies offering SOC 2 compliance solutions and services" />
		<style>
			.container {
				width: 90%;
				max-width: 1200px;
				margin: 0 auto;
				padding: 0 1rem;
			}
			
			.intro {
				text-align: center;
				margin: 2rem auto 4rem;
				max-width: 800px;
			}
			
			.intro h1 {
				font-size: 2.2rem;
				margin-bottom: 1rem;
				color: var(--accent-dark);
			}
			
			.intro p {
				font-size: 1.1rem;
				line-height: 1.6;
			}
			
			.category-section {
				margin-bottom: 4rem;
				padding: 1rem;
				background-color: rgba(255, 255, 255, 0.7);
				border-radius: 8px;
				box-shadow: 0 2px 8px rgba(var(--gray), 10%);
			}
			
			.category-title {
				font-size: 1.6rem;
				margin-bottom: 2rem;
				color: var(--accent);
				border-bottom: 2px solid var(--accent);
				padding-bottom: 0.5rem;
				text-align: center;
			}
			
			.company-grid {
				display: grid;
				grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
				gap: 1.5rem;
			}
			
			.company-card {
				background: white;
				border-radius: 8px;
				box-shadow: 0 3px 6px rgba(var(--gray), 20%);
				padding: 1.25rem;
				transition: transform 0.3s ease, box-shadow 0.3s ease;
				height: 100%;
				display: flex;
				flex-direction: column;
				border: 1px solid rgba(var(--gray-light), 0.5);
			}
			
			.company-card:hover {
				transform: translateY(-5px);
				box-shadow: 0 6px 12px rgba(var(--gray), 25%);
			}
			
			.company-name {
				font-size: 1.2rem;
				font-weight: bold;
				margin-bottom: 0.5rem;
				color: var(--accent-dark);
			}
			
			.company-description {
				color: rgb(var(--gray-dark));
				font-size: 0.95rem;
				line-height: 1.5;
				flex-grow: 1;
			}
			
			.company-link {
				display: inline-block;
				margin-top: 1rem;
				padding: 0.5rem 1rem;
				color: white;
				background-color: var(--accent);
				font-weight: bold;
				text-decoration: none;
				transition: all 0.2s ease;
				border-radius: 4px;
				text-align: center;
			}
			
			.company-link:hover {
				background-color: var(--accent-dark);
				transform: translateY(-2px);
			}
			
			@media (min-width: 1400px) {
				.container {
					width: 85%;
				}
				.company-grid {
					grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
				}
			}
			
			@media (max-width: 768px) {
				.container {
					width: 95%;
				}
				.company-grid {
					grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
				}
				.intro h1 {
					font-size: 2rem;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main class="container">
			<section class="intro">
				<h1>SOC 2 Compliance Solutions Directory</h1>
				<p>
