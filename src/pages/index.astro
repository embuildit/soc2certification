---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title="SOC 2 Compliance Solutions Directory" description="A comprehensive directory of companies offering SOC 2 compliance solutions and services" />
		<style>
			.container {
				width: 80%;
				max-width: 1600px;
				margin: 0 auto;
				padding: 0 1rem;
			}
			
			.intro {
				text-align: center;
				margin-bottom: 3rem;
			}
			
			.intro h1 {
				font-size: 2.5rem;
				margin-bottom: 1rem;
				color: var(--accent-dark);
			}
			
			.intro p {
				font-size: 1.2rem;
				max-width: 800px;
				margin: 0 auto;
				line-height: 1.6;
			}
			
			.category-section {
				margin-bottom: 100rem;
			}
			
			.category-title {
				font-size: 1.8rem;
				margin-bottom: 2rem;
				color: var(--accent);
				border-bottom: 2px solid var(--accent);
				padding-bottom: 0.5rem;
				text-align: center;
			}
			
			.company-grid {
			  display: grid;
			  grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
			  column-gap: 1.5rem;  /* Horizontal gap between columns */
			  row-gap: 3rem;       /* Vertical gap between rows */
			}
			
			.company-card {
				background: white;
				border-radius: 10px;
				box-shadow: 0 4px 8px rgba(var(--gray), 25%);
				padding: 1.5rem;
				margin: 0;
				transition: transform 0.3s ease, box-shadow 0.3s ease;
				height: 100%;
				display: flex;
				flex-direction: column;
				border: 1px solid rgba(var(--gray-light), 0.5);
			}
			
			.company-card:hover {
				transform: translateY(-5px);
				box-shadow: 0 8px 16px rgba(var(--gray), 30%);
			}
			
			.company-name {
				font-size: 1.2rem;
				font-weight: bold;
				margin-bottom: 0.75rem;
				color: var(--accent-dark);
			}
			
			.company-description {
				color: rgb(var(--gray-dark));
				font-size: 0.95rem;
				line-height: 1.5;
				flex-grow: 1;
				margin-bottom: 1rem;
			}
			
			.company-link {
				display: inline-block;
				margin-top: auto;
				padding: 0.5rem 1rem;
				color: white;
				background-color: var(--accent);
				font-weight: bold;
				text-decoration: none;
				transition: all 0.2s ease;
				border-radius: 4px;
				text-align: center;
				align-self: flex-start;
			}
			
			.company-link:hover {
				background-color: var(--accent-dark);
				transform: translateY(-2px);
			}
			
			main {
				padding: 2rem 0 4rem;
			}
			
			@media (min-width: 1400px) {
				.company-grid {
					grid-template-columns: repeat(3, 1fr);
				}
			}
			
			@media (min-width: 992px) and (max-width: 1399px) {
				.company-grid {
					grid-template-columns: repeat(3, 1fr);
				}
			}
			
			@media (min-width: 768px) and (max-width: 991px) {
				.company-grid {
					grid-template-columns: repeat(2, 1fr);
				}
			}
			
			@media (max-width: 767px) {
				.company-grid {
					grid-template-columns: 1fr;
				}
				
				.container {
					width: 95%;
				}
			}
		</style>
	</head>
