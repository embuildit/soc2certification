---
const today = new Date();
import { getCollection } from 'astro:content';

// Get the blog posts for the footer
const posts = await getCollection('blog');
const recentPosts = posts.slice(0, 3); // Get the 3 most recent posts
---

<footer class="site-footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-column">
        <h3>About Us</h3>
        <p>SOC2 Certification Directory is your comprehensive resource for finding the best compliance solutions, tools, and service providers to help your organization achieve and maintain SOC2 compliance.</p>
        <div class="social-links">
          <a href="https://x.com/EmmaBuiltIt" aria-label="Twitter" target="_blank"><i class="fa-brands fa-x-twitter"></i></a>
          // <a href="#" aria-label="LinkedIn"><i class="fa-brands fa-linkedin-in"></i></a>
        </div>
      </div>
      
      <div class="footer-column">
        <h3>Recent Articles</h3>
        <ul>
          {recentPosts.map(post => (
            <li>
              <a href={`/blog/${post.id}/`}>{post.data.title}</a>
            </li>
          ))}
        </ul>
      </div>
      
      <div class="footer-column">
        <h3>Quick Links</h3>
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/blog">Blog</a></li>
        </ul>
      </div>
      
      <div class="footer-column">
        <h3>Contact</h3>
        <p>For feedback or to add your website to this list, please DM at :</p>
        <p><a href="https://x.com/jinacapital" target="_blank">@JinaCapital</a></p>
      </div>
    </div>
  </div>
</footer>
