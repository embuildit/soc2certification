<!-- Sponsor click tracking -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Find all links to the sponsor
    const sponsorLinks = document.querySelectorAll('a[href*="trycomp.ai"]');
    
    // Add click event listeners to each sponsor link
    sponsorLinks.forEach(link => {
      link.addEventListener('click', function(e) {
        // Check if gtag is available
        if (typeof gtag === 'function') {
          // Send the event to Google Analytics
          gtag('event', 'click', {
            'event_category': 'sponsor',
            'event_label': 'trycomp.ai',
            'link_url': this.href,
            'link_text': this.innerText,
            'link_location': getElementLocation(this)
          });
          
          console.log('Sponsor click tracked');
        }
      });
    });
    
    // Helper function to determine link location
    function getElementLocation(element) {
      if (element.closest('.sponsored-bar')) return 'header';
      if (element.closest('.copyright')) return 'footer';
      if (element.closest('.company-card')) return 'directory';
      return 'other';
    }
  });
</script>

<!-- Sponsored Bar -->
<div class="sponsored-bar">
  <div class="container">
    <span>Proudly sponsored by <a href="https://trycomp.ai" target="_blank">trycomp.ai</a> - Open Source Compliance Automation</span>
  </div>
</div>
