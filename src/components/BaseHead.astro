---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import '../styles/global.css';

interface Props {
	title: string;
	description: string;
	image?: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const { title, description, image = '/blog-placeholder-1.jpg' } = Astro.props;
---

<!-- Google tag (gtag.js) -->
<script async src="https://www.googletagmanager.com/gtag/js?id=G-D8NE9BBQZ6"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'G-D8NE9BBQZ6');
</script>

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<meta name="generator" content={Astro.generator} />

<!-- Font preloads -->
<link rel="preload" href="/fonts/atkinson-regular.woff" as="font" type="font/woff" crossorigin />
<link rel="preload" href="/fonts/atkinson-bold.woff" as="font" type="font/woff" crossorigin />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(image, Astro.url)} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={new URL(image, Astro.url)} />

<!-- Sponsor click tracking -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Find all links to the sponsor
    const sponsorLinks = document.querySelectorAll('a[href*="trycomp.ai"]');
    
    // Add click event listeners to each sponsor link
    sponsorLinks.forEach(link => {
      link.addEventListener('click', function(e) {
        // Check if gtag is available
        if (typeof gtag === 'function') {
          // Send the event to Google Analytics
          gtag('event', 'sponsor_click', {
            'event_category': 'Outbound Links',
            'event_label': 'trycomp.ai Sponsor Link',
            'transport_type': 'beacon'
          });
          
          console.log('Sponsor click tracked');
        }
      });
    });
  });
</script>

<!-- Sponsored Bar -->
<div class="sponsored-bar">
  <div class="container">
    <span>Proudly sponsored by <a href="https://trycomp.ai" target="_blank">trycomp.ai</a> - Open Source Compliance Automation</span>
  </div>
</div>
