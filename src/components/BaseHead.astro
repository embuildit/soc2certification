<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={new URL(image, Astro.url)} />

<!-- Sponsor click tracking -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Find all links to the sponsor
    const sponsorLinks = document.querySelectorAll('a[href*="trycomp.ai"]');
    
    // Add click event listeners to each sponsor link
    sponsorLinks.forEach(link => {
      link.addEventListener('click', function(e) {
        // Check if gtag is available
        if (typeof gtag === 'function') {
          // Send the event to Google Analytics
          gtag('event', 'sponsor_click', {
            'event_category': 'Outbound Links',
            'event_label': 'trycomp.ai Sponsor Link',
            'transport_type': 'beacon'
          });
          
          console.log('Sponsor click tracked');
        }
      });
    });
  });
</script>

<!-- Sponsored Bar -->
<div class="sponsored-bar">
  <div class="container">
    <span>Proudly sponsored by <a href="https://trycomp.ai" target="_blank">trycomp.ai</a> - Open Source Compliance Automation</span>
  </div>
</div>
